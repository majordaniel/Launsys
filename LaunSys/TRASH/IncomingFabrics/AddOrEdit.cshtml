@model LaunSys.Models.tb_IncomingFabric
@{
    ViewBag.Title = "AddOrEdit";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}


<h2>AddOrEdit</h2>
@using (Html.BeginForm("AddOrEdit", "tb_IncomingFabric",FormMethod.Post, new {onsubmit="return submitForm(this)" }))
{
    @Html.HiddenFor(model=>model.Id)
    <div class="form-group">
        @Html.LabelFor(model=>model.Date, new {@class="control-label"})
        @*<input type="date" class="form-control" id="Date" placeholder="Enter Text to Search">*@

        @Html.EditorFor(model=>model.Date, new {htmlAttributes= new {@class="form-control", @Value=Model.date.ToString("MM/dd/yyyy")} })
      
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DateSN, new { @class = "control-label" })
        @Html.EditorFor(model => model.DateSN, new { htmlAttributes = new { @class = "form-control" } })
    </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Cust_Name, new { @class = "control-label" })
            @Html.EditorFor(model => model.Cust_Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Inv_No, new { @class = "control-label" })
            @Html.EditorFor(model => model.Inv_No, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Qty, new { @class = "control-label" })
            @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Qty)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Amount, new { @class = "control-label" })
            <div class="input-group">
                <span class="input-group-addon">₦</span>
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
             
            </div>
         </div>
        <div class="form-group">
    
                <input type="button" value="Submit" class="btn btn-primary" />
                <input type="reset" value="Reset" class="btn btn-warning" />
        </div>
}
