
@{
    ViewBag.Title = "SingleClientView";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <img src="~/Content/logo.jpg" width="100"; height="70" style="align-content:center"/>
</div>

<div>
    <h4>Individual Client Details</h4><br>
    <table class="table table-striped">

        @if (ViewBag.SingleClientDetail != null)
        {
            foreach (var item in ViewBag.SingleClientDetail)
            {
               
                 <tr>
                     <td><b>Address: </b></td>
                <td>@item.Cust_Address</td>
                 </tr>
                 <tr>
                     <td><b>Phone Number: </b></td>
                <td>@item.Phone</td>
                 </tr>
                <tr>
                    <td><b>Email Address: </b></td>
                <td>@item.Email</td>
                </tr>
               
            }
        }
        
    </table>
</div>





